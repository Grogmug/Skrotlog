<Window x:Class="Skrotlog.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Skrotlog.UI"
        xmlns:view="clr-namespace:Skrotlog.UI.View"
        mc:Ignorable="d"
        Title="SkrotLog" Height="800" Width="1200">
    <Grid>
        <TabControl>
            <TabItem Header="Kontrakter">
                <view:ContractView />
            </TabItem>
            <TabItem Header="Opret kontrakt">
                <view:CreateContractView />
            </TabItem>
            <TabItem Header="Opret kunde">
                <view:CreateCustomerView />
            </TabItem>
            <TabItem Header="Indstillinger">
                <view:SettingsView />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
